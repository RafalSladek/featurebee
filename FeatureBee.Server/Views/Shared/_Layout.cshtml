@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div id="featureBeeLogo" class="navbar-header">
            <a href="/" class="navbar-brand" style="padding-left: 75px; position: relative;"><img src="/Content/images/logo.png" style="height: 60px; left: 0px; top: 0; position: absolute;"/> FeatureBee</a>
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" class="btn-primary" data-open="newFeature">+ New Feature</a>
                </li>
                <li>
                    <a data-help="true">Help</a>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="https://github.com/AutoScout24/FeatureBee" target="_blank">GitHub</a></li>
                <li><a href="#">@User.Identity.Name</a></li>
            </ul>

        </div>
    </div>
</div>
<div class="container">
    <h1>RAFAL</h1>
    @RenderBody()
</div>
</body>
</html>
